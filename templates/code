    <!-- <script>
        // Function to handle loading model logic
        function sendLoadModelRequest() {
            const loadingMessage = document.getElementById('loadingMessage');
            const statusMessage = document.getElementById('statusMessage');

            // Show "Running/Loading" message
            loadingMessage.style.display = "block";
            statusMessage.textContent = ""; // Clear any previous message

            const formData = new FormData();
            formData.append('action', 'load_model'); // Specify the action for loading the model

            // Send the AJAX request
            fetch("{% url 'detectcrime' %}", {
                method: "POST",
                body: formData,
                headers: {
                    "X-CSRFToken": document.querySelector('[name=csrfmiddlewaretoken]').value,
                }
            })
            .then(response => response.json())
            .then(data => {
                // Hide "Running/Loading" message
                loadingMessage.style.display = "none";

                // Display the result message
                statusMessage.textContent = data.message;
                if (data.message.includes("successfully")) {
                    statusMessage.className = "status-success"; // Success message
                } else {
                    statusMessage.className = "status-error"; // Failure message
                }
            })
            .catch(error => {
                // Hide "Running/Loading" message
                loadingMessage.style.display = "none";

                // Display error message
                statusMessage.textContent = `Error: ${error}`;
                statusMessage.className = "status-error";
            });
        }

        // Attach event listener to the Load Model button
        document.getElementById('loadModelButton').addEventListener('click', sendLoadModelRequest);
    </script>
</body>
